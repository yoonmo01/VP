# .replit 또는 replit.nix 의 run/ports
modules = ["nodejs-20", "postgresql-16", "python-3.12"]

# 두 프로세스 동시 실행: BE=8000, FE=5173
run = "bash -lc 'uvicorn app.main:app --host 0.0.0.0 --port 8000 --proxy-headers & cd FE && npm install --no-audit --no-fund && npm run dev -- --host 0.0.0.0 --port 5173'"

[nix]
channel = "stable-25_05"
packages = ["bash", "glibcLocales", "libxcrypt"]

# 🔓 외부 포트 2개 모두 공개
[[ports]]
localPort = 5173
externalPort = 5173 # 프론트 미리보기용

[[ports]]
localPort = 8000
externalPort = 80 # 백엔드(/docs) 전용. (80이 막히면 8000으로 바꿔도 됨)
